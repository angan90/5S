<body>
  <div class="wrap">
    <h1>Player z wyborem wersji językowej</h1>
    <p class="subtitle">Wideo jest to samo, różne wersje językowe w osobnych plikach (napisy wtopione).</p>

    <div class="controls" role="group" aria-label="Wybór wersji językowej">
      <button class="pill active" data-lang="pl" aria-pressed="true">PL</button>
      <button class="pill" data-lang="en" aria-pressed="false">EN</button>
      <button class="pill" data-lang="de" aria-pressed="false">UK</button>
    </div>

    <div class="player-wrap">
      <div class="fluid">
        <video
          id="player"
          class="video-js vjs-default-skin"
          controls
          preload="metadata"
          playsinline
          data-setup="{}"
        >
          <!-- Domyślnie polska wersja -->
          <source src="./media/film-pl.mp4" type="video/mp4" />
        </video>
      </div>
    </div>
  </div>

  <script>
    // Podmień na swoje ścieżki/URL-e:
    const SOURCES = {
      pl: { src: "./media/film-pl.mp4", type: "video/mp4" },
      en: { src: "./media/film-en.mp4", type: "video/mp4" },
      de: { src: "./media/film-de.mp4", type: "video/mp4" }
    };

    const player = videojs('player');
    const buttons = Array.from(document.querySelectorAll('.pill'));

    // Przywracanie ostatnio wybranego języka
    const saved = localStorage.getItem('sea_player_lang');
    if (saved && SOURCES[saved]) {
      player.src(SOURCES[saved]);
      buttons.forEach(b=>{
        const on = b.dataset.lang===saved;
        b.classList.toggle('active', on);
        b.setAttribute('aria-pressed', on ? 'true':'false');
      });
    }

    buttons.forEach(btn=>{
      btn.addEventListener('click', () => {
        const lang = btn.dataset.lang;
        const wasPaused = player.paused();
        const t = player.currentTime();

        // UI toggle
        buttons.forEach(b=>{
          const on = b===btn;
          b.classList.toggle('active', on);
          b.setAttribute('aria-pressed', on ? 'true':'false');
        });

        player.src(SOURCES[lang]);
        player.one('loadedmetadata', () => {
          try { player.currentTime(t); } catch(e) {}
          if (!wasPaused) player.play().catch(()=>{ /* autoplay policies */ });
        });

        localStorage.setItem('sea_player_lang', lang);
      });
    });
  </script>
</body>
